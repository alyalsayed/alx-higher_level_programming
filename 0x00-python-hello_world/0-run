#!/bin/bash

# Get the name of the Python file from the environment variable
PYFILE=$PYFILE

# Check if the PYFILE environment variable is set
if [ -z "$PYFILE" ]
then
  echo "Error: PYFILE environment variable is not set."
  exit 1
fi

# Check if the Python file exists
if [ ! -f "$PYFILE" ]
then
  echo "Error: Python file does not exist."
  exit 1
fi

# Run the Python script
python3 "$PYFILE"
